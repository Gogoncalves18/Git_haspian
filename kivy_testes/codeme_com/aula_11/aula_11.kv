    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: '5dp'
        padding: '15dp'

        Label:
        #Neste LABEL eu escrevi os paramentros dentro dele pq
        #a classe que eu criei para escrever os paramentros 
        #em um lugar somente na aula_09 estava influenciando
        #nos paramentros do botao
            text: 'Nome'
            italic: True
            color: (0,0,0,1)
            size_hint: (1, None)
            height: '40dp'
            canvas.before:
                Color:
                    rgba: (0,0.5,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        TextInput:
            multiline: False
        Label:
            text: 'Definição de Prato'
            italic: True
            color: (0,0,0,1)
            size_hint: (1, None)
            height: '40dp'
            canvas.before:
                Color:
                    rgba: (0,0.5,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        TextInput:
            multiline: False
        btn:
            text: 'Submeter'
        btn:
            text: 'Limpar'

