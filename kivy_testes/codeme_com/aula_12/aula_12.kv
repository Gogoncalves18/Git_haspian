<Box> 
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: '5dp'
        padding: '15dp'

        Image:

            source: 'imag.jpg'
            #ALLOW_STREtCH permite esticar a imagem para se adaptar ao 
            #espaco
            allow_stretch: True
            #O KEEP_RATIO quando FALSE permite que a imagem aumente
            #para ocupar o espa√ßo desde que o RATIO da imagem seja 
            #preservado
            keep_ratio: False

        Button:
            text: 'Submeter'

        Button:
            text: 'Limpar'

