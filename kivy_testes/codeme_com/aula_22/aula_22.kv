<Box> 
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: '10dp'
        spacing: '5dp'

        Button: 
            text: "Ola mundo"

        BtnRedondo: 
            text: "Tchau bundao"
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
            #background_color: (48/255,84/255,150/255,1)
            #background_normal: ''
            on_press: print('Hey Man√©')

#Necessario criar uma classe de botao para usar o comando do canvas
#porem ficou sem reacao ao pressionar o botao, ele nao muda de Color
#mas a funcao PRESS funciona
<BtnRedondo@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        #Recurso para arrendondar um botao no kivy atraves canvas    
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
